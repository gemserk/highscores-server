# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Import CRUD routes
*      /admin              module:crud
*	   /admin/scores					admin.Scores.score
GET		/users/createGuest				api.Users.createGuest
GET		/leaderboards/score				api.Leaderboards.score
GET		/leaderboards/scores			api.Leaderboards.scores

GET		/test/init						test.Test.init
GET		/test/delete						test.Test.delete

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
